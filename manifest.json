{
  "name": "Shared Whispers",
  "short_name": "Shared Whispers",
  "display": "standalone",
  "start_url": "/",
  "prefer_related_applications": false,
  "categories": [
    "utility"
  ],
  "background_color": "#ffffff",
  "icons": [
    {
      "src": "static/icons/icon_512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "static/icons/icon_192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "static/icons/icon_48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "static/icons/icon_24.png",
      "sizes": "24x24",
      "type": "image/png"
    }
  ],
  "scope": "/",
  "share_target": {
    "action": "/share",
    "enctype": "multipart/form-data",
    "method": "POST",
    "params": {
      "files": [{
        "name": "audio",
        "accept": ["audio/*"]
      }]
    }
  }
}
